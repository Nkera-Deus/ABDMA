<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCFC"
    tools:context=".MakeOrder">


    <TextView
        android:id="@+id/txt02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/heading01_regular"
        android:text="Make Order"
        android:textColor="@color/primary_orange"
        android:textSize="30sp"
        android:textStyle="normal"

        />

    <TextView
        android:id="@+id/txt00"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/txt02"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:text="orderId"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"
        android:textStyle="normal"
        />

    <TextView
        android:id="@+id/txt03"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/txt00"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:text="Product"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"
        android:textStyle="normal"


        />


    <TextView
        android:id="@+id/txt05"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/txt03"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Quantity"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"
        android:textStyle="normal"


        />

    <TextView
        android:id="@+id/txt06"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/txt05"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Unit cost"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"
        android:textStyle="normal"


        />

    <TextView
        android:id="@+id/txt07"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/txt06"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Total Cost"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"
        android:textStyle="normal"


        />

    <TextView
        android:id="@+id/txt08"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_below="@id/txt07"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="DLocation"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"
        android:textStyle="normal"


        />

    <TextView
        android:id="@+id/txt09"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/txt08"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="From"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edt00"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_below="@id/txt02"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@id/txt00"
        android:background="@drawable/custom_edt"
        android:hint="orderId"
        android:textColor="@color/primary_orange"
        android:textColorHint="@color/primary_orange"

        />

    <EditText
        android:id="@+id/edt1"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_below="@id/edt00"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="22dp"
        android:textColor="@color/primary_orange"
        android:layout_toRightOf="@id/txt03"
        android:background="@drawable/custom_edt"
        android:hint="product name"
        android:textColorHint="@color/primary_orange"

        />


    <EditText
        android:id="@+id/edt2"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_below="@id/edt1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/primary_orange"
        android:layout_toRightOf="@id/txt05"
        android:background="@drawable/custom_edt"
        android:hint="quantity"
        android:textColorHint="@color/primary_orange"

        />

    <EditText
        android:id="@+id/edt3"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_below="@id/edt2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/primary_orange"
        android:layout_toRightOf="@id/txt06"
        android:background="@drawable/custom_edt"
        android:hint="unit cost"
        android:textColorHint="@color/primary_orange"

        />

    <TextView
        android:id="@+id/txtTotalCost"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:hint="auto"
        android:textColorHint="@color/purple_light"
        android:layout_below="@id/edt3"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/txt07"
        android:background="@drawable/custom_edt"
        android:textColor="@color/primary_orange"

        />

    <EditText
        android:id="@+id/edt5"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_below="@id/txtTotalCost"
        android:layout_marginLeft="20dp"
        android:textColor="@color/primary_orange"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/txt08"
        android:background="@drawable/custom_edt"
        android:hint="destination"
        android:textColorHint="@color/primary_orange"

        />

    <EditText
        android:id="@+id/edt6"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_below="@id/edt5"
        android:textColor="@color/primary_orange"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/txt09"
        android:background="@drawable/custom_edt"
        android:hint="buy from"
        android:textColorHint="@color/primary_orange"

        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt09"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/heading01_regular"
        android:text="Add"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/heading01_regular"
        android:text="Delete"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/edt6"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/btn1"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/heading01_regular"
        android:text="View"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/btn2"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/heading01_regular"
        android:text="Send"
        android:textColor="@color/primary_orange"
        android:textSize="20sp"

        />



</RelativeLayout>